<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/menuColor"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/menu_fr"/>
    <Button
            android:id="@+id/button_back"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/back_but"
            android:layout_alignParentLeft="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="29.29dp"/>
    <TextView
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/menu_fr"
            android:layout_marginLeft="95dp"
            android:layout_marginBottom="15dp"
            android:textColor="#ffffff"
            android:text="Article"
            android:textSize="21sp"
            android:textStyle="bold"
            android:fontFamily="Montserrat"
            android:gravity="top"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:id="@+id/line"
            app:layout_constraintTop_toBottomOf="@id/menu_fr"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="27dp"
            android:src="@drawable/line_v"/>

    <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="Tips for avoid misunderstandings of husband and wife and live in harmony.  "
            app:layout_constraintTop_toBottomOf="@id/menu_fr"
            android:layout_marginTop="11dp"
            app:layout_constraintLeft_toLeftOf="@id/line"
            android:layout_marginLeft="15dp"
            android:id="@+id/name_text"
            android:textSize="19sp"
            android:textStyle="bold"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_text"
            android:layout_marginTop="151dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="27dp"
                android:text="@string/text_four"
                android:textSize="14sp"/>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>