<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="55dp"
            android:id="@+id/image"/>
    <RadioGroup 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image"
            android:layout_marginTop="11dp"
            android:gravity="center_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal"
            android:id="@+id/rgroup">
        
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/one_rb"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/two_rb"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/three_rb"/>
    </RadioGroup>


    <ImageView
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp"
            android:background="@drawable/image"
            android:id="@+id/img_one" />
    <ImageView
        android:layout_width="136dp"
        android:layout_height="130dp"
        android:src="@drawable/group_1"
        app:layout_constraintBottom_toBottomOf="@id/img_one"
        app:layout_constraintLeft_toLeftOf="@id/img_one"
        app:layout_constraintRight_toRightOf="@id/img_one"
        android:layout_marginBottom="26dp"
        />
    <TextView
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/img_one"
        app:layout_constraintTop_toTopOf="@id/img_one"
        android:layout_marginTop="51dp"
        android:layout_marginLeft="25dp"
        android:text="Daring Dresses"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"/>

    <ImageView
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp"
            android:background="@drawable/image"
            android:id="@+id/img_two"/>

    <ImageView
        android:layout_width="136dp"
        android:layout_height="130dp"
        android:src="@drawable/group_3"
        app:layout_constraintRight_toRightOf="@id/img_two"
        app:layout_constraintBottom_toBottomOf="@id/img_two"
        app:layout_constraintLeft_toLeftOf="@id/img_two"
        android:layout_marginBottom="26dp"/>
    <TextView
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/img_two"
        app:layout_constraintTop_toTopOf="@id/img_two"
        android:layout_marginTop="51dp"
        android:layout_marginLeft="25dp"
        android:text="Luxury Presents"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"/>

    <ImageView
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/img_three"/>
    <ImageView
        android:layout_width="136dp"
        android:layout_height="139dp"
        android:src="@drawable/group_2"
        app:layout_constraintLeft_toLeftOf="@id/img_three"
        app:layout_constraintRight_toRightOf="@id/img_three"
        app:layout_constraintBottom_toBottomOf="@id/img_three"
        android:layout_marginBottom="26dp"/>

    <TextView
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/img_three"
        app:layout_constraintTop_toTopOf="@id/img_three"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp"
        android:text="Alluring Accessories"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"/>

    <ImageView
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/img_four"/>
    <ImageView
        android:layout_width="136dp"
        android:layout_height="130dp"
        android:src="@drawable/group_4"
        app:layout_constraintBottom_toBottomOf="@id/img_four"
        app:layout_constraintRight_toRightOf="@id/img_four"
        app:layout_constraintLeft_toLeftOf="@id/img_four"
        android:layout_marginBottom="26dp"/>
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/img_four"
        app:layout_constraintTop_toTopOf="@id/img_four"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="25dp"
        android:text="Bold Toys"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"/>

</androidx.constraintlayout.widget.ConstraintLayout>